<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="br.com.fiap.coleta.entities.BancoDadosThreshold" table="banco_dados_threshold">
			
		<id name="id" column="id">
			<generator class="increment"/>
		</id>
		
		<property name="nome">
			<column name="nome" sql-type="varchar(30)"  not-null="true"/>
		</property>
		
		<property name="limiteMemoria">
			<column name="limite_memoria" sql-type="decimal(5,2)"  not-null="true"/>
		</property>	
		
		<property name="limiteFile">
			<column name="limite_file" sql-type="decimal(5,2)"  not-null="true"/>
		</property>	
		
		<property name="limiteTempoBackup" not-null="true"/>
		
		<property name="limiteTempoJob" not-null="true"/>		
		
	</class> 
</hibernate-mapping>