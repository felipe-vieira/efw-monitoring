<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<joined-subclass name="br.com.fiap.coleta.entities.BancoDadosThreshold" table="banco_dados_threshold">
			
		<key column="id"/>
		
		<property name="limiteMemoria">
			<column name="limite_memoria" sql-type="decimal(5,2)"  not-null="true"/>
		</property>	
		
		<property name="limiteFile">
			<column name="limite_file" sql-type="decimal(5,2)"  not-null="true"/>
		</property>	
		
		<property name="limiteTempoBackup" not-null="true"/>
		
		<property name="limiteTempoJob" not-null="true"/>		
		
	</joined-subclass>
</hibernate-mapping>