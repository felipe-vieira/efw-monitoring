<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="br.com.fiap.coleta.entities.Solucao" table="solucao">
	
		<id name="id" column = "id">
			<generator class="increment"/>
		</id>
		
		<property name="descricao" not-null="true">
			<column name="descricao" sql-type="varchar(1024)"/>
		</property>
		
		<many-to-one name="tipoAlarme"/>
		<many-to-one name="no"/>
		<many-to-one name="usuario"/>				
		
		<property name="tipo" not-null="true">
			<column name="tipo" sql-type="varchar(30)"/>
		</property>
		<property name="subTipo" not-null="true">
			<column name="subTipo" sql-type="varchar(30)"/>
		</property>
		<property name="software" not-null="true">
			<column name="software" sql-type="varchar(30)"/>
		</property>
		
	</class> 
</hibernate-mapping>