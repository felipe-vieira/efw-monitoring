<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<joined-subclass name="br.com.fiap.coleta.entities.ServidorThreshold" table="servidor_threshold" 
		extends="br.com.fiap.coleta.entities.Threshold">
			
		<key column="id"/>
		<property name="limiteMemoria">
			<column name="limite_memoria" sql-type="decimal(5,2)"  not-null="true"/>
		</property>	
		
		<property name="limiteCpu">
			<column name="limite_cpu" sql-type="decimal(5,2)"  not-null="true"/>
		</property>	
		
		<property name="limiteParticao">
			<column name="limite_particao" sql-type="decimal(5,2)"  not-null="true"/>
		</property>	
		
		
	</joined-subclass>
</hibernate-mapping>